{
  "name": "openplayerjs",
  "version": "2.10.1",
  "homepage": "https://www.openplayerjs.com/",
  "author": {
    "name": "Rafael Miranda",
    "email": "rafa8626@gmail.com"
  },
  "license": "MIT",
  "description": "HTML5 video and audio player",
  "repository": {
    "url": "https://github.com/openplayerjs/openplayerjs.git",
    "type": "git"
  },
  "main": "./dist/openplayer.js",
  "style": "./dist/openplayer.css",
  "module": "./dist/esm/player.js",
  "types": "./types/player.d.ts",
  "files": [
    "dist/*",
    "docs/*",
    "types/*"
  ],
  "keywords": [
    "media",
    "video",
    "audio",
    "hls",
    "dash",
    "mp4",
    "mp3",
    "openplayer",
    "openplayerjs",
    "vast",
    "vpaid",
    "player",
    "video-player",
    "audio-player",
    "html5-media",
    "hlsjs",
    "ima-sdk"
  ],
  "scripts": {
    "build": "npm test && npm run build:sources",
    "build:sources": "[ -d ./dist ] && rm -R ./dist; webpack --mode=production && npm run create-esm && npm run create-d-types",
    "create-d-types": "tsc -p tsconfig-types.json",
    "create-esm": "[ -d ./dist/esm ] && rm -R ./dist/esm; tsc -p tsconfig-esm.json",
    "release": "npm run build && release-it",
    "test": "npm run test:sources && tsd",
    "test:sources": "karma start --single-run --browsers ChromeHeadless --log-level info karma.conf.js",
    "test:dev": "karma start --watch --browsers Chrome karma.conf.js",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "readme": "https://github.com/openplayerjs/openplayerjs/blob/master/README.md",
  "devDependencies": {
    "@babel/core": "^7.17.4",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@release-it/conventional-changelog": "^4.1.0",
    "@types/chai": "^4.2.22",
    "@types/expect.js": "^0.3.29",
    "@types/jest": "^27.0.2",
    "@types/jsdom": "^16.2.14",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "autoprefixer": "^10.3.7",
    "babel-loader": "^8.2.3",
    "babel-preset-minify": "^0.5.1",
    "chai": "^4.3.6",
    "conventional-changelog": "^3.1.25",
    "copy-webpack-plugin": "^9.1.0",
    "coveralls": "^3.1.1",
    "css-loader": "^6.6.0",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "cssnano": "^5.0.17",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "expect.js": "^0.3.1",
    "husky": "^7.0.2",
    "jest": "^27.3.1",
    "karma": "^6.3.16",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.2.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-typescript": "^5.5.3",
    "lint-staged": "^11.2.0",
    "mini-css-extract-plugin": "^2.3.0",
    "mocha": "^9.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "postcss": "^8.3.9",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^6.1.1",
    "postcss-preset-env": "^7.4.0",
    "prettier": "^2.4.1",
    "release-it": "^14.12.4",
    "standard-version": "^9.3.2",
    "stylelint": "^13.13.1",
    "stylelint-order": "^4.1.0",
    "terser-webpack-plugin": "^5.3.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.5.0",
    "tsd": "^0.17.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.5",
    "unminified-webpack-plugin": "^3.0.0",
    "webpack": "^5.69.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "auto-changelog": "^1.16.4",
    "core-js": "^3.22.6"
  }
}
