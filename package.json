{
    "name": "openplayerjs",
    "version": "2.14.3",
    "homepage": "https://www.openplayerjs.com/",
    "author": {
        "name": "Rafael Miranda",
        "email": "rafa8626@gmail.com"
    },
    "license": "MIT",
    "description": "HTML5 video and audio player",
    "repository": {
        "url": "https://github.com/openplayerjs/openplayerjs.git",
        "type": "git"
    },
    "type": "module",
    "main": "./dist/openplayer.js",
    "style": "./dist/openplayer.css",
    "module": "./dist/openplayer.es.js",
    "types": "./types/player.d.ts",
    "exports": {
        ".": {
            "import": "./dist/openplayer.es.js",
            "require": "./dist/openplayer.js"
        }
    },
    "keywords": [
        "media",
        "video",
        "audio",
        "hls",
        "dash",
        "mp4",
        "mp3",
        "openplayer",
        "openplayerjs",
        "vast",
        "vpaid",
        "player",
        "video-player",
        "audio-player",
        "html5-media",
        "hlsjs",
        "ima-sdk"
    ],
    "scripts": {
        "build": "npm run build:sources && npm run build:styles",
        "build:sources": "vite build && npm run create-d-types",
        "build:styles": "npx stylelint './styles/player.css' && postcss ./styles/player.css --use autoprefixer > ./dist/openplayer.css && postcss ./dist/openplayer.css > ./dist/openplayer.min.css",
        "create-d-types": "tsc -p tsconfig-types.json",
        "release": "npm run build && release-it",
        "test": "npm run test:sources && tsd",
        "test:sources": "karma start --single-run --browsers ChromeHeadless --log-level info karma.conf.cjs"
    },
    "readme": "https://github.com/openplayerjs/openplayerjs/blob/master/README.md",
    "devDependencies": {
        "@babel/core": "^7.18.2",
        "@babel/plugin-transform-runtime": "^7.18.2",
        "@babel/preset-env": "^7.18.2",
        "@babel/runtime": "^7.18.3",
        "@release-it/conventional-changelog": "^5.0.0",
        "@types/chai": "^4.3.1",
        "@types/expect.js": "^0.3.29",
        "@types/jest": "^28.1.1",
        "@types/jsdom": "^16.2.14",
        "@types/mocha": "^9.1.1",
        "@types/node": "^17.0.41",
        "@typescript-eslint/eslint-plugin": "^5.27.1",
        "@typescript-eslint/parser": "^5.27.1",
        "autoprefixer": "^10.4.7",
        "babel-loader": "^8.2.5",
        "babel-preset-minify": "^0.5.2",
        "chai": "^4.3.6",
        "conventional-changelog": "^3.1.25",
        "cssnano": "^5.1.11",
        "eslint": "^8.17.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.0.0",
        "expect.js": "^0.3.1",
        "husky": "^8.0.1",
        "karma": "^6.3.20",
        "karma-chai": "^0.1.0",
        "karma-chrome-launcher": "^3.1.1",
        "karma-coverage": "^2.2.0",
        "karma-mocha": "^2.0.1",
        "karma-mocha-reporter": "^2.2.5",
        "karma-typescript": "^5.5.3",
        "lint-staged": "^13.0.0",
        "mocha": "^10.0.0",
        "mocha-lcov-reporter": "^1.3.0",
        "postcss": "^8.4.14",
        "postcss-cli": "^10.0.0",
        "postcss-import": "^14.1.0",
        "postcss-preset-env": "^7.7.1",
        "prettier": "^2.6.2",
        "release-it": "^15.0.0",
        "rollup-plugin-esbuild-minify": "^1.1.1",
        "standard-version": "^9.5.0",
        "stylelint": "^15.10.1",
        "stylelint-order": "^5.0.0",
        "ts-loader": "^9.3.0",
        "ts-node": "^10.8.1",
        "tsd": "^0.20.0",
        "tslint": "^6.1.3",
        "typescript": "^4.7.3",
        "vite": "^5.2.11"
    },
    "dependencies": {
        "auto-changelog": "^2.4.0",
        "core-js": "^3.22.8"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
