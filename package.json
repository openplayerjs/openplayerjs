{
  "name": "openplayerjs",
  "version": "3.0.0",
  "description": "HTML5 video and audio player",
  "author": {
    "name": "Rafael Miranda",
    "email": "rafa8626@gmail.com"
  },
  "repository": {
    "url": "https://github.com/openplayerjs/openplayerjs.git",
    "type": "git"
  },
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "dist/cjs/openplayer.cjs",
  "module": "dist/esm/openplayer.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/core/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/core.cjs",
      "default": "./dist/esm/core.js"
    },
    "./umd": "./dist/openplayer.umd.js",
    "./controls/*": {
      "types": "./dist/types/controls/*.d.ts",
      "import": "./dist/esm/controls/*.js",
      "require": "./dist/cjs/controls/*.cjs"
    },
    "./media/*": {
      "types": "./dist/types/media/*.d.ts",
      "import": "./dist/esm/media/*.js",
      "require": "./dist/cjs/media/*.cjs"
    },
    "./plugins/*": {
      "types": "./dist/types/plugins/*.d.ts",
      "import": "./dist/esm/plugins/*.js",
      "require": "./dist/cjs/plugins/*.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "controls/*": [
        "dist/types/controls/*"
      ],
      "media/*": [
        "dist/types/media/*"
      ],
      "plugins/*": [
        "dist/types/plugins/*"
      ],
      "*": [
        "dist/types/*"
      ]
    }
  },
  "unpkg": "dist/umd/openplayer.js",
  "jsdelivr": "dist/umd/openplayer.js",
  "files": [
    "dist/*",
    "docs/*",
    "types/*"
  ],
  "keywords": [
    "media",
    "video",
    "audio",
    "hls",
    "dash",
    "mp4",
    "mp3",
    "openplayer",
    "openplayerjs",
    "vast",
    "vmap",
    "player",
    "video-player",
    "audio-player",
    "html5-media",
    "hlsjs"
  ],
  "readme": "https://github.com/openplayerjs/openplayerjs/blob/master/README.md",
  "scripts": {
    "lint": "eslint --cache src __tests__",
    "build:types": "tsc -p tsconfig.types.json",
    "build:bundles": "rollup -c rollup.config.mjs",
    "watch": "npm run build:bundles -- --watch",
    "build": "npm run build:types && npm run build:bundles && npm run build:css",
    "test": "jest --coverage",
    "build:css": "mkdir -p dist && npm run lint:css && postcss src/player.css -o dist/openplayer.css",
    "lint:css": "stylelint src/player.css"
  },
  "dependencies": {
    "@dailymotion/vast-client": "^6.4.2",
    "@dailymotion/vmap": "^3.3.3",
    "hls.js": "^1.6.15"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.13",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "cssnano": "^6.1.2",
    "eslint": "^10.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-util": "^30.2.0",
    "lint-staged": "^15.5.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-preset-env": "^10.6.1",
    "prettier": "^3.8.1",
    "rollup": "^4.57.1",
    "rollup-plugin-dts": "^6.3.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^7.0.1",
    "ts-jest": "^29.4.6",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
