{
    "name": "openplayerjs",
    "version": "2.13.0",
    "homepage": "https://www.openplayerjs.com/",
    "author": {
      "name": "Rafael Miranda",
      "email": "rafa8626@gmail.com"
    },
    "license": "MIT",
    "description": "HTML5 video and audio player",
    "repository": {
      "url": "https://github.com/openplayerjs/openplayerjs.git",
      "type": "git"
    },
    "main": "./dist/openplayer.js",
    "style": "./dist/openplayer.css",
    "module": "./dist/esm/player.js",
    "types": "./types/player.d.ts",
    "files": [
      "dist/*",
      "docs/*",
      "types/*"
    ],
    "keywords": [
      "media",
      "video",
      "audio",
      "hls",
      "dash",
      "mp4",
      "mp3",
      "openplayer",
      "openplayerjs",
      "vast",
      "vpaid",
      "player",
      "video-player",
      "audio-player",
      "html5-media",
      "hlsjs",
      "ima-sdk"
    ],
    "scripts": {
      "build": "npm run build:styles && npm test && npm run build:sources",
      "build:sources": "webpack --mode=production && npm run create:esm && npm run create:types",
      "build:styles": "mkdir -p dist && npx stylelint './styles/player.css' && postcss ./styles/player.css --use autoprefixer > ./dist/openplayer.css && postcss ./dist/openplayer.css > ./dist/openplayer.min.css",
      "create:types": "tsc -p tsconfig-types.json",
      "create:esm": "tsc -p tsconfig-esm.json",
      "release": "npm run build && release-it",
      "test": "jest --detectOpenHandles --passWithNoTests --forceExit && tsd",
      "test:changes": "jest --onlyChanged --detectOpenHandles --passWithNoTests --coverage=false",
      "watch": "jest --watch",
      "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
      "prepare": "husky install"
    },
    "readme": "https://github.com/openplayerjs/openplayerjs/blob/master/README.md",
    "devDependencies": {
      "@babel/core": "^7.19.3",
      "@babel/plugin-transform-runtime": "^7.19.1",
      "@babel/preset-env": "^7.19.3",
      "@babel/runtime": "^7.19.0",
      "@jest/globals": "^29.1.2",
      "@release-it/conventional-changelog": "^5.1.0",
      "@types/jest": "^28.1.8",
      "@types/jsdom": "^16.2.15",
      "@types/node": "^17.0.45",
      "@typescript-eslint/eslint-plugin": "^5.38.1",
      "@typescript-eslint/parser": "^5.38.1",
      "auto-changelog": "^2.4.0",
      "autoprefixer": "^10.4.12",
      "babel-loader": "^8.2.5",
      "babel-preset-minify": "^0.5.2",
      "conventional-changelog": "^3.1.25",
      "coveralls": "^3.1.1",
      "cssnano": "^5.1.13",
      "eslint": "^8.24.0",
      "eslint-config-airbnb": "^19.0.4",
      "eslint-config-airbnb-base": "^15.0.0",
      "eslint-config-prettier": "^8.5.0",
      "eslint-plugin-import": "^2.26.0",
      "eslint-plugin-jest-extended": "^2.0.0",
      "eslint-plugin-prettier": "^4.2.1",
      "eslint-webpack-plugin": "^3.2.0",
      "husky": "^8.0.1",
      "jest": "^29.1.2",
      "jest-environment-jsdom": "^29.1.2",
      "jest-extended": "^3.1.0",
      "jest-watch-typeahead": "^2.2.0",
      "lint-staged": "^13.0.3",
      "postcss": "^8.4.17",
      "postcss-cli": "^10.0.0",
      "postcss-import": "^14.1.0",
      "postcss-loader": "^7.0.1",
      "postcss-preset-env": "^7.8.2",
      "prettier": "^2.7.1",
      "release-it": "^15.4.2",
      "standard-version": "^9.5.0",
      "stylelint": "^14.13.0",
      "stylelint-order": "^5.0.0",
      "terser-webpack-plugin": "^5.3.6",
      "ts-jest": "^29.0.3",
      "ts-loader": "^9.4.1",
      "ts-node": "^10.9.1",
      "tsd": "^0.20.0",
      "typescript": "^4.8.4",
      "unminified-webpack-plugin": "^3.0.0",
      "webpack": "^5.74.0",
      "webpack-cli": "^4.10.0"
    },
    "dependencies": {
      "core-js": "^3.25.3"
    },
    "engines": {
      "node": ">=16.0.0"
    }
  }