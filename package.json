{
    "name": "openplayerjs",
    "version": "2.14.5",
    "homepage": "https://www.openplayerjs.com/",
    "author": {
        "name": "Rafael Miranda",
        "email": "rafa8626@gmail.com"
    },
    "license": "MIT",
    "description": "HTML5 video and audio player",
    "repository": {
        "url": "https://github.com/openplayerjs/openplayerjs.git",
        "type": "git"
    },
    "type": "module",
    "main": "./dist/openplayer.js",
    "style": "./dist/openplayer.css",
    "module": "./dist/openplayer.es.js",
    "types": "./types/player.d.ts",
    "exports": {
        ".": {
            "import": "./dist/openplayer.es.js",
            "require": "./dist/openplayer.js"
        }
    },
    "files": [
        "dist/*",
        "docs/*",
        "types/*"
    ],
    "keywords": [
        "media",
        "video",
        "audio",
        "hls",
        "dash",
        "mp4",
        "mp3",
        "openplayer",
        "openplayerjs",
        "vast",
        "vpaid",
        "player",
        "video-player",
        "audio-player",
        "html5-media",
        "hlsjs",
        "ima-sdk"
    ],
    "scripts": {
        "build": "npm run build:sources && npm run build:styles",
        "build:sources": "vite build && npm run create-d-types",
        "build:styles": "npx stylelint './styles/player.css' && postcss ./styles/player.css --use autoprefixer > ./dist/openplayer.css && postcss ./dist/openplayer.css > ./dist/openplayer.min.css",
        "create-d-types": "tsc -p tsconfig-types.json",
        "release": "npm run build && release-it",
        "test": "cypress open",
        "coverage": "npm test && npx nyc report --reporter=text-summary"
    },
    "readme": "https://github.com/openplayerjs/openplayerjs/blob/master/README.md",
    "devDependencies": {
        "@cypress/code-coverage": "^3.12.46",
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@release-it/conventional-changelog": "^8.0.1",
        "@types/node": "^20.16.2",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "auto-changelog": "^2.4.0",
        "autoprefixer": "^10.4.20",
        "babel-plugin-istanbul": "^7.0.0",
        "conventional-changelog": "^6.0.0",
        "cssnano": "^7.0.5",
        "cypress": "^13.14.0",
        "cypress-vite": "^1.5.0",
        "eslint": "^9.9.1",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jest": "^28.8.0",
        "eslint-plugin-prettier": "^5.2.1",
        "husky": "^9.1.5",
        "istanbul-lib-coverage": "^3.2.2",
        "lint-staged": "^15.2.9",
        "mocha": "^10.7.3",
        "nyc": "^13.3.0",
        "postcss": "^8.4.41",
        "postcss-cli": "^11.0.0",
        "postcss-import": "^16.1.0",
        "postcss-preset-env": "^9.6.0",
        "prettier": "^3.3.3",
        "release-it": "^17.6.0",
        "rollup-plugin-esbuild-minify": "^1.1.2",
        "standard-version": "^9.5.0",
        "stylelint": "^16.9.0",
        "stylelint-order": "^6.0.4",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "tsd": "^0.31.1",
        "typescript": "^5.5.4",
        "vite": "^5.4.2",
        "vite-plugin-istanbul": "^6.0.2"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
