{
  "name": "openplayerjs",
  "version": "2.7.3",
  "homepage": "https://www.openplayerjs.com/",
  "author": {
    "name": "Rafael Miranda",
    "email": "rafa8626@gmail.com"
  },
  "license": "MIT",
  "description": "HTML5 video and audio player",
  "repository": {
    "url": "https://github.com/openplayerjs/openplayerjs.git",
    "type": "git"
  },
  "main": "./dist/openplayer.js",
  "style": "./dist/openplayer.css",
  "module": "./dist/esm/player.js",
  "types": "./types/player.d.ts",
  "files": [
    "dist/*",
    "docs/*",
    "types/*"
  ],
  "keywords": [
    "media",
    "video",
    "audio",
    "hls",
    "dash",
    "mp4",
    "mp3",
    "openplayer",
    "openplayerjs",
    "vast",
    "vpaid",
    "player",
    "video-player",
    "audio-player",
    "html5-media",
    "hlsjs",
    "ima-sdk"
  ],
  "scripts": {
    "build": "npm test && [ -d ./dist ] && rm -R ./dist; webpack --mode=production && npm run create-esm && npm run create-d-types",
    "create-d-types": "npx typescript -p tsconfig-types.json",
    "create-esm": "[ -d ./dist/esm ] && rm -R ./dist/esm; npx typescript -p tsconfig-esm.json",
    "release": "npm run build && release-it",
    "test": "cross-env TS_NODE_FILES=true mocha --exit --require ts-node/register --colors -r jsdom-global/register --timeout 5000 test/**/*.ts",
    "coverage": "nyc npm run test"
  },
  "readme": "https://github.com/openplayerjs/openplayerjs/blob/master/README.md",
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/chai": "^4.2.15",
    "@types/element-closest": "^3.0.0",
    "@types/jsdom": "^16.2.9",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.35",
    "autoprefixer": "^9.8.6",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.2.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-minify": "^0.5.1",
    "chai": "^4.2.0",
    "conventional-changelog": "^3.1.24",
    "cross-env": "^5.2.0",
    "css-loader": "^3.6.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-loader": "^3.0.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^5.1.0",
    "jsdom": "16.5.1",
    "jsdom-global": "3.0.2",
    "karma": "^5.2.3",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "mocha": "^7.2.0",
    "nyc": "^14.1.1",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss": "^8.2.10",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "release-it": "^14.6.2",
    "standard-version": "^9.3.0",
    "style-loader": "^1.3.0",
    "stylelint": "^13.8.0",
    "stylelint-order": "^4.1.0",
    "ts-loader": "^5.4.5",
    "ts-node": "^8.3.0",
    "tsd": "0.13.1",
    "tslint": "^5.20.1",
    "typescript": "^3.9.7",
    "unminified-webpack-plugin": "^2.0.0",
    "url-loader": "^3.0.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "auto-changelog": "^1.16.4",
    "core-js": "^3.13.1",
    "custom-event-polyfill": "^1.0.7",
    "element-closest": "^3.0.2",
    "global": "^4.4.0"
  }
}
