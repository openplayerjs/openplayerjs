{
    "name": "openplayerjs",
    "version": "2.11.0",
    "homepage": "https://www.openplayerjs.com/",
    "author": {
        "name": "Rafael Miranda",
        "email": "rafa8626@gmail.com"
    },
    "license": "MIT",
    "description": "HTML5 video and audio player",
    "repository": {
        "url": "https://github.com/openplayerjs/openplayerjs.git",
        "type": "git"
    },
    "main": "./dist/openplayer.js",
    "style": "./dist/openplayer.css",
    "module": "./dist/esm/player.js",
    "types": "./types/player.d.ts",
    "files": [
        "dist/*",
        "docs/*",
        "types/*"
    ],
    "keywords": [
        "media",
        "video",
        "audio",
        "hls",
        "dash",
        "mp4",
        "mp3",
        "openplayer",
        "openplayerjs",
        "vast",
        "vpaid",
        "player",
        "video-player",
        "audio-player",
        "html5-media",
        "hlsjs",
        "ima-sdk"
    ],
    "scripts": {
        "build": "npm test && npm run build:sources",
        "build:sources": "webpack --mode=production && npm run create:esm && npm run create:types && npm run create:cjs",
        "create:types": "tsc -p tsconfig-types.json",
        "create:esm": "tsc --module es2015 --target es6 --outDir dist/esm",
        "create:cjs": "tsc --module commonjs --target es6 --outDir dist/cjs",
        "release": "npm run build && release-it",
        "test": "jest --detectOpenHandles --passWithNoTests && tsd",
        "watch": "jest --watch"
    },
    "readme": "https://github.com/openplayerjs/openplayerjs/blob/master/README.md",
    "devDependencies": {
        "@babel/core": "^7.18.2",
        "@babel/plugin-transform-runtime": "^7.18.2",
        "@babel/preset-env": "^7.18.2",
        "@babel/runtime": "^7.18.3",
        "@release-it/conventional-changelog": "^5.0.0",
        "@types/jest": "^28.1.8",
        "@types/jsdom": "^16.2.14",
        "@types/node": "^17.0.41",
        "@typescript-eslint/eslint-plugin": "^5.27.1",
        "@typescript-eslint/parser": "^5.27.1",
        "auto-changelog": "^2.4.0",
        "autoprefixer": "^10.4.7",
        "babel-loader": "^8.2.5",
        "babel-preset-minify": "^0.5.2",
        "conventional-changelog": "^3.1.25",
        "css-loader": "^6.7.1",
        "css-minimizer-webpack-plugin": "^4.0.0",
        "cssnano": "^5.1.11",
        "eslint": "^8.17.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest-extended": "^2.0.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-webpack-plugin": "^3.2.0",
        "husky": "^8.0.1",
        "jest": "^28.1.3",
        "jest-environment-jsdom": "^29.0.1",
        "jest-extended": "^3.0.2",
        "jest-watch-typeahead": "^2.1.1",
        "lint-staged": "^13.0.0",
        "mini-css-extract-plugin": "^2.6.0",
        "postcss": "^8.4.14",
        "postcss-import": "^14.1.0",
        "postcss-loader": "^7.0.0",
        "postcss-preset-env": "^7.7.1",
        "prettier": "^2.6.2",
        "release-it": "^15.0.0",
        "standard-version": "^9.5.0",
        "stylelint": "^14.8.5",
        "stylelint-order": "^5.0.0",
        "terser-webpack-plugin": "^5.3.3",
        "ts-jest": "^28.0.8",
        "ts-loader": "^9.3.0",
        "ts-node": "^10.8.1",
        "tsd": "^0.20.0",
        "typescript": "^4.7.3",
        "unminified-webpack-plugin": "^3.0.0",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.9.2"
    },
    "dependencies": {
        "core-js": "^3.22.8"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
