{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
      "lib": [
        "DOM",
        "DOM.Iterable",
        "ESNext"
      ],
      "allowSyntheticDefaultImports": true,
      "types": ["vite/client", "node", "jest", "jest-environment-puppeteer", "expect-puppeteer"],
      "allowJs": false,
      "target": "es6",
      "module": "ESNext",
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": false,
      "skipLibCheck": true,
      "strict": true,
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "strictPropertyInitialization": false,
  },
  "include": [
      "./src",
      "./_tests_"
  ],
  "exclude": [
      "node_modules",
      "dist",
      "test"
  ],
}