{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src", "types", "__tests__"],
  "exclude": ["node_modules", "dist"]
}
